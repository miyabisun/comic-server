generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Comic {
  id          Int       @id @default(autoincrement())
  title       String
  file        String    @unique
  bookshelf   String
  genre       String?
  brand       String?
  original    String?
  custom_path String?
  created_at  DateTime  @default(now())
  deleted_at  DateTime?

  @@index([bookshelf])
  @@index([brand])
  @@index([created_at])
  @@map("comics")
}
